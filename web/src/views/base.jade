            meta(name="access_token",content=session["access_token"])
        block title
            title kyoppie
        script!="var CONFIG="+config.web_config_json
        script(src="//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        script(src="/static/js/api.js")
        script(src="/static/js/notify.js")
        script(src="/static/js/relative-time.js")
        script(src="/static/libs/nunjucks.min.js")
        script(src="/static/js/nunjucks-config.js")
        link(rel="dns-prefetch",href=config.web_config.api)
        block header
    body
        #headerBar
            ul#headerBarLeftItems
                li: a(href="/"): i.fa.fa-home
            ul#headerBarRightItems
                li: a(href="/menu"): i.fa.fa-bars
        .container
            block content
        #notify
