extends ./base
block header
    script(src="/_/tojinja/post")
    script.
        $(function(){
            function newWebSocketConnection(){
                $.showNotify("ストリーミングに接続しています...");
                var ws = $.api.websocket("posts/timeline");
                ws.onopen = function(){
                    $.showNotify("ストリーミングに接続しました！")
                    setTimeout(function(){
                        $.hideNotify();
                    },500)
                }
                ws.onmessage = function(e){
                    e = JSON.parse(e.data);
                    var post = e.response;
                    console.log(post)
                    $("#timeline").prepend(template_post(post));
                }
                ws.onclose = function(){
                    newWebSocketConnection();
                }
            }
            newWebSocketConnection();
            $.api.get("posts/timeline").then(function(res){
                res = res.response;
                res.forEach(function(post){
                    $("#timeline").append(template_post(post));
                })
            })
            $("#postForm").submit(function(ev){
                ev.preventDefault();
                $.api.post("posts/create",$(this).serialize()).then(function(post_obj){
                    post_obj = post_obj.response
                    $("#postForm textarea").val("");
                })
            })
        })
block content
    .panel
        form#postForm
            textarea.input(name="text",placeholder="ねえねえ、今どんな気持ち？",rows=5)
            button(type="submit")
                i.fa.fa-paper-plane
                |  投稿
